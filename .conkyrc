# Conky settings #
background no
update_interval 1
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
double_buffer yes
no_buffers yes
text_buffer_size 2048
imlib_cache_size 0
temperature_unit celsius


# Window specifications #
own_window_class Conky
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual no
own_window_argb_value 120
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
own_window_hints below

border_inner_margin 0
border_outer_margin 0
border_width 2

minimum_size 1265 90
maximum_width 1270

alignment tl
gap_x 10
gap_y 20
# Graphics settings #
draw_shades no
draw_outline nodraw_borders no
draw_graph_borders no

#${color blue}FORTUNE ${hr 2}$color
#${execi 120 fortune -s | fold -w50}


#${color blue}LOGGING ${hr 2}$color
#${execi 30 tail -n3 /var/log/messages | fold -w50}


# Text settings #
draw_outline no
draw_borders no
use_xft yes
override_utf8_locale yes
xftfont Monospace:size=8
xftalpha 1
uppercase no
temperature_unit celsius
stippled_borders 3

# Colors settings #
default_outline_color FAFAFA
own_window_colour 171717
default_color c4c4c4

color0 13c3f1
color1 orange
color2 ffffff
color3 fafafa
color4 13c3f1

# Lua Load  #
lua_load ~/conky/rings-v1.2.1.lua
lua_draw_hook_pre ring_stats

TEXT
